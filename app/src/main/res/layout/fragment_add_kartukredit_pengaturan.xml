<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhiteGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kartu Kredit"
            android:textSize="@dimen/font_22"
            android:background="@color/colorPrimaryGray"
            android:padding="10dp"
            android:textColor="@color/textColorHome"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line"
            android:layout_marginTop="@dimen/margin_5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_25"
                android:src="@drawable/icon_visa"
                android:layout_marginRight="@dimen/margin_5"/>

            <ImageView
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_25"
                android:src="@drawable/icon_mastercard"
                android:layout_marginLeft="@dimen/margin_5"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Kartu Kredit"
            android:textSize="@dimen/font_16"
            android:padding="@dimen/padding_5"
            android:textStyle="bold"
            android:textColor="@color/textColorHome"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColor2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"/>
                <EditText
                    android:id="@+id/edittxtNamaAddKartuKreditPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Nama pada Kartu anda"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Kartu Kredit"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColor2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"/>

                <EditText
                    android:id="@+id/edittxtKartuKreditAddKartuKreditPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="kartu kredit"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masa Berlaku"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColor2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_15">

                    <Button
                        android:id="@+id/btnBulanAddKartuKreditPengaturan"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_45"
                        android:layout_weight="1"
                        android:text="Jan"
                        android:background="@drawable/button_white"
                        android:textSize="@dimen/font_14"
                        android:paddingRight="@dimen/padding_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:elevation="2dp"
                        android:stateListAnimator="@drawable/button_shadow"
                        android:drawableRight="@drawable/dropdown"
                        android:textColor="@color/textColorHome"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btnTahunAddKartuKreditPengaturan"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_45"
                        android:layout_weight="1"
                        android:text="2016"
                        android:background="@drawable/button_white"
                        android:textSize="@dimen/font_14"
                        android:paddingRight="@dimen/padding_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:elevation="2dp"
                        android:stateListAnimator="@drawable/button_shadow"
                        android:drawableRight="@drawable/dropdown"
                        android:textColor="@color/textColorHome"
                        android:textAllCaps="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kode CV"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColor2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5">

                    <EditText
                        android:id="@+id/edittxtKodeCVAddKartuKreditPengaturan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_rounded2"
                        android:hint="CVC/CVV"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/edittextColor"
                        android:textColorHint="@color/colorPrimaryGray"
                        android:padding="10dp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="bottom">

                <Button
                    android:id="@+id/btnSimpanAddKartuKreditPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Simpan"
                    android:background="@drawable/button_green"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:textAllCaps="false"
                    android:paddingRight="5dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/icon_button_white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>