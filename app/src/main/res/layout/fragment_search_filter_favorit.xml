<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhiteGray">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryWhiteGray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filter"
                    android:textSize="@dimen/font_22"
                    android:background="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/line"
                    android:layout_marginTop="@dimen/margin_5"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key word"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"/>

                <EditText
                    android:id="@+id/edittxtKeywordSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Key Word"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Min"
                            android:textSize="@dimen/font_8"
                            android:textColor="@color/textColorHome"
                            android:textAllCaps="true"/>

                        <EditText
                            android:id="@+id/edittxtMinSearchFilterFavorit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_rounded2"
                            android:hint="Rp."
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/edittextColor"
                            android:textColorHint="@color/colorPrimaryGray"
                            android:padding="10dp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/margin_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Max"
                            android:textSize="@dimen/font_8"
                            android:textColor="@color/textColorHome"
                            android:textAllCaps="true"/>

                        <EditText
                            android:id="@+id/edittxtMaxSearchFilterFavorit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_rounded2"
                            android:hint="Rp."
                            android:textSize="@dimen/font_14"
                            android:textColor="@color/edittextColor"
                            android:textColorHint="@color/colorPrimaryGray"
                            android:padding="10dp"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"/>

                <Button
                    android:id="@+id/btnLevelSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Expert"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textColorHome"
                    android:background="@drawable/button_white"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/dropdown"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/ratingBarSearchFilterFavorit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:numStars="5"
                        android:rating="4.5"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_5"
                        style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"/>

                <Button
                    android:id="@+id/btnJenisKelaminSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Jenis Kelamin"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textColorHome"
                    android:background="@drawable/button_white"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/dropdown"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bahasa"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_25"/>

                <Button
                    android:id="@+id/btnBahasaSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Indonesia"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/textColorHome"
                    android:background="@drawable/button_white"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/dropdown"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Member"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"/>

                <RadioButton
                    android:id="@+id/rdoRegularSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:layout_marginRight="@dimen/margin_50"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center"
                    android:text="Regular Member"
                    android:textSize="@dimen/font_12"/>

                <RadioButton
                    android:id="@+id/rdoGoldSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:layout_marginRight="@dimen/margin_50"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="Gold Member"
                    android:textSize="@dimen/font_12"/>

                <Button
                    android:id="@+id/btnPerbaharuiSearchFilterFavorit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Perbaharui Pencarian"
                    android:background="@drawable/button_green"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_30"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:textAllCaps="false"
                    android:paddingRight="5dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/icon_button_white"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>