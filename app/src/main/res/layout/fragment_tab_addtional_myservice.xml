<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5"
        android:background="@color/base30"
        android:layout_marginTop="@dimen/margin_5"/>

    <include
        android:id="@+id/listAdditionalMyService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/fragment_list_additional_myservice"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"/>

    <View
        android:id="@+id/lineAdditionalMyService"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/line"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40" />
    
    <Button
        android:id="@+id/btnCreateAdditionalServiceTabAdditionalMyService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Additional Service"
        android:textColor="@color/textColorHome"
        android:textAllCaps="true"
        android:textSize="@dimen/font_14"
        android:paddingLeft="@dimen/padding_10"
        android:background="@drawable/button_white"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:elevation="2dp"
        android:stateListAnimator="@drawable/button_shadow"
        android:drawableLeft="@drawable/plus_purple"/>

</LinearLayout>