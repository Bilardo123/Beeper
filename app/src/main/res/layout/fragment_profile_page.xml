<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:background="@color/colorPrimaryWhiteGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_20">

                <com.github.siyamed.shapeimageview.CircularImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgProfileProfilePage"
                    android:layout_width="@dimen/width_100"
                    android:layout_height="@dimen/height_100"
                    android:src="@drawable/plus"
                    android:layout_centerHorizontal="true"
                    app:siBorderWidth="0dp"
                    app:siBorderColor="@color/textColorHome"
                    app:siSquare="true"/>

                <TextView
                    android:id="@+id/txtNamaBeeperProfilPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cynthia White"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/textColorHome"
                    android:layout_marginTop="@dimen/margin_15"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_60">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Email"
                        android:gravity="left"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/textColorHome"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                    <TextView
                        android:id="@+id/txtEmailBeeperProfilePage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Sumano.tanuma@gmail.com"
                        android:gravity="right"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorPrimaryBlueLight"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="No Handphone"
                        android:gravity="left"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/textColorHome"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                    <TextView
                        android:id="@+id/txtNoHandphoneProfilePage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="+62821.1234.8826"
                        android:gravity="right"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorPrimaryBlueLight"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Tanggal Lahir"
                        android:gravity="left"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/textColorHome"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                    <TextView
                        android:id="@+id/txtTglLahirProfilePage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="19 November 1987"
                        android:gravity="right"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorPrimaryBlueLight"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Alamat"
                        android:gravity="left"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/textColorHome"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                    <TextView
                        android:id="@+id/txtAlamatProfilePage"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_45"
                        android:layout_weight="1.3"
                        android:text="Jln. Taman Sari 4 no 58 a \n Jakarta Barat, 11150"
                        android:gravity="right"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorPrimaryBlueLight"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="ID. Pengenal"
                        android:gravity="left"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/textColorHome"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                    <TextView
                        android:id="@+id/txtIDPengenalProfilePage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="8140.3937.3435.3333"
                        android:gravity="right"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorPrimaryBlueLight"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginBottom="@dimen/margin_10"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>