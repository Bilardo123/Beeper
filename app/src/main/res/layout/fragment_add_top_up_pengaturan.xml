<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhiteGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Up"
            android:textSize="@dimen/font_22"
            android:background="@color/colorPrimaryGray"
            android:padding="10dp"
            android:textColor="@color/textColorHome"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line"
            android:layout_marginTop="@dimen/margin_5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edittxtNamaAkunAddTopUpPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Nama akun "
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/margin_25"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/edittxtNomorRekeningAddTopUpPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Nomor Rekening"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edittxtJlhTopUpAddTopUpPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Jumlah Top up"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="bottom">

                <Button
                    android:id="@+id/btnKonfirmasiAddTopUpPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Konfirmasi"
                    android:background="@drawable/button_green"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:textAllCaps="false"
                    android:paddingRight="5dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/icon_button_white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>