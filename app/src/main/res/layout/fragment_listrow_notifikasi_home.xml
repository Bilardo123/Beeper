<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutListRowNotifikasiHome"
    android:weightSum="2"
    android:background="@color/list_row_notif_gray">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5">

        <com.github.siyamed.shapeimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgProfileListRowNotifikasiHome"
            android:layout_width="@dimen/width_30"
            android:layout_height="@dimen/height_30"
            android:src="@drawable/chelsea_islan"
            android:layout_centerHorizontal="true"
            app:siBorderWidth="0dp"
            app:siBorderColor="@color/textColorHome"
            app:siSquare="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="left|center"
        android:layout_marginRight="@dimen/margin_55"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5">

        <TextView
            android:id="@+id/txtDetailListRowNotifikasiHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cynthia white membuat pesan : oh gitu. besok tgl 25 jam 8 jg boleh deh, tp gmn ubahnya?"
            android:textColor="@color/textColorHome"
            android:textSize="@dimen/font_12"/>

    </LinearLayout>


</LinearLayout>