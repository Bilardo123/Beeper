<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_25"
    android:layout_marginRight="@dimen/margin_25">

    <com.vipul.hp_hp.timelineview.TimelineView
        android:id="@+id/time_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:marker_size="@dimen/height_5"
        app:line_size="1dp"
        app:line="@color/line"
        android:layout_marginRight="@dimen/margin_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_10">

        <TextView
            android:id="@+id/txtTanggalTimelineDetailServiceProfileStruk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selasa, 23 Desember 2018, 12:00 PM"
            android:textSize="@dimen/font_10"
            android:textColor="@color/textColor2"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutListRowNotifikasiHome"
            android:weightSum="2"
            android:background="@color/list_row_notif_gray">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">

                <com.github.siyamed.shapeimageview.CircularImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgProfileTimelineDetailServiceProfileStruk"
                    android:layout_width="@dimen/width_30"
                    android:layout_height="@dimen/height_30"
                    android:src="@drawable/chelsea_islan"
                    android:layout_centerHorizontal="true"
                    app:siBorderWidth="0dp"
                    app:siBorderColor="@color/textColorHome"
                    app:siSquare="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:gravity="left|center"
                android:layout_marginRight="@dimen/margin_55"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">

                <TextView
                    android:id="@+id/txtDetailTimelineDetailServiceProfileStruk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cynthia white membuat pesan : oh gitu. besok tgl 25 jam 8 jg boleh deh, tp gmn ubahnya?"
                    android:textColor="@color/textColorHome"
                    android:textSize="@dimen/font_12"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
