<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            android:layout_marginBottom="@dimen/margin_15">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryWhiteGray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sidebeep Kredit"
                    android:textSize="@dimen/font_22"
                    android:background="@color/colorPrimaryGray"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_5"
                    android:background="@color/line"
                    android:layout_marginTop="@dimen/margin_5"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sidebeep kredit Saya"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColor2"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_15"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/textColorHome"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/margin_55"
                    android:layout_marginRight="@dimen/margin_55"
                    />

                <TextView
                    android:id="@+id/txtTopUpKreditPengaturanKreditSidebeep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 5.000.000"
                    android:textSize="@dimen/font_24"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_5"/>

                <Button
                    android:id="@+id/btnTopUpPengaturanKreditSidebeep"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Top Up"
                    android:background="@drawable/button_green"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_16"
                    android:textAllCaps="false"
                    android:paddingRight="5dp"
                    android:elevation="2dp"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginRight="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_40"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:drawableRight="@drawable/icon_button_white"
                    android:stateListAnimator="@drawable/button_shadow"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryWhiteGray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masukan Kode Voucher Anda"
                    android:textSize="@dimen/font_20"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/edittxtKodeVoucherPengaturanKreditSidebeep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded2"
                        android:hint="Kode Voucher"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/textColorHome"
                        android:textColorHint="@color/colorPrimaryGray"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/margin_25"
                        android:layout_marginLeft="@dimen/margin_25"
                        android:layout_marginRight="@dimen/margin_25"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btnKonfirmasiVoucherPengaturanKreditSidebeep"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_45"
                        android:text="Konfirmasi"
                        android:background="@drawable/button_green"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/font_16"
                        android:textAllCaps="false"
                        android:paddingRight="5dp"
                        android:elevation="2dp"
                        android:layout_marginLeft="@dimen/margin_25"
                        android:layout_marginRight="@dimen/margin_25"
                        android:layout_marginTop="@dimen/margin_40"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:drawableRight="@drawable/icon_button_white"
                        android:stateListAnimator="@drawable/button_shadow"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
