<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutInputUrgentCallParent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhiteGray">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryWhiteGray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servis"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"/>

                <EditText
                    android:id="@+id/edittxtServisInputUrgentCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Servis"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Permasalahan"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"/>

                <EditText
                    android:id="@+id/edittxtInformasiPermasalahanInputUrgentCall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="Mobil saya endut - endutan tiba2"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:padding="10dp"
                    android:gravity="left|top"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servis Level"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"/>

                <Button
                    android:id="@+id/btnServisLevelInputUrgentCall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45"
                    android:text="Expert"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:background="@drawable/button_white"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"
                    android:drawableRight="@drawable/dropdown"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"/>

                <Button
                    android:id="@+id/btnLokasiInputUrgentCall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_150"
                    android:text="Jln Gedong Panjang II, no 14 L"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:background="@drawable/button_white"
                    android:gravity="top|center"
                    android:padding="@dimen/padding_10"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:elevation="2dp"
                    android:stateListAnimator="@drawable/button_shadow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Tambahan"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/textColorHome"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"/>

                <EditText
                    android:id="@+id/edittxtInformasiTambahanInputUrgentCall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80"
                    android:background="@drawable/edittext_rounded2"
                    android:hint="informasi tambahan"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/edittextColor"
                    android:textColorHint="@color/colorPrimaryGray"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:padding="10dp"
                    android:gravity="left|top"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center"
                    android:layout_marginBottom="@dimen/margin_55">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabKategoriInputUrgentCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_40"
                        android:layout_marginBottom="@dimen/margin_15"
                        app:backgroundTint="@color/bgColor"
                        android:src="@drawable/urgent_call"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>