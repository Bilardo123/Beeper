<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhiteGray"
        android:layout_marginBottom="@dimen/margin_10"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Up"
                android:textSize="@dimen/font_22"
                android:background="@color/colorPrimaryGray"
                android:padding="@dimen/padding_10"
                android:textColor="@color/textColorHome"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line"
                android:layout_marginTop="@dimen/margin_5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailtopuppengaturan1"
                android:textSize="@dimen/font_14"
                android:padding="@dimen/padding_5"
                android:textColor="@color/textColorHome"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PT. Tafern Indonesia Perkasa"
                android:textSize="@dimen/font_14"
                android:padding="@dimen/padding_5"
                android:textColor="@color/textColorHome"
                android:layout_marginTop="@dimen/margin_30"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3150987654"
                android:textSize="@dimen/font_40"
                android:padding="@dimen/padding_5"
                android:textColor="@color/textColorHome"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailtopuppengaturan2"
                android:textSize="@dimen/font_14"
                android:padding="@dimen/padding_5"
                android:textColor="@color/textColorHome"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailtopuppengaturan3"
                android:textSize="@dimen/font_14"
                android:padding="@dimen/padding_5"
                android:textColor="@color/textColorHome"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnTopUpDetailPengaturanSidebeep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:text="Top Up"
                android:background="@drawable/button_green"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font_16"
                android:textAllCaps="false"
                android:paddingRight="5dp"
                android:elevation="2dp"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_marginBottom="@dimen/margin_15"
                android:drawableRight="@drawable/icon_button_white"
                android:stateListAnimator="@drawable/button_shadow"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>