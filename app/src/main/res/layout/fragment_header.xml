<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColorHeader"
    android:elevation="10dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/imgHamburgerHeader"
        android:layout_width="@dimen/width_35"
        android:layout_height="@dimen/height_35"
        android:src="@drawable/menu_hamburger"
        android:padding="@dimen/padding_5"
        android:layout_margin="@dimen/margin_5"/>

    <TextView
        android:id="@+id/txtTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIDEBEEP"
        android:textSize="@dimen/font_18"
        android:gravity="center"
        android:textColor="@color/colorPrimaryWhite"
        android:paddingTop="@dimen/padding_7"
        android:paddingRight="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_5"
        android:textStyle="bold"/>

</RelativeLayout>