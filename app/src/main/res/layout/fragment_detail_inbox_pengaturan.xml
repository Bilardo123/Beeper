<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhiteGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promo Holiday"
            android:textSize="@dimen/font_22"
            android:background="@color/colorPrimaryGray"
            android:padding="10dp"
            android:textColor="@color/textColorHome"
            android:gravity="center"
            android:textAllCaps="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line"
            android:layout_marginTop="@dimen/margin_5"
            />
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_400"
            android:src="@drawable/sider_home_promo"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/margin_10"/>

    </LinearLayout>

</android.support.v7.widget.CardView>