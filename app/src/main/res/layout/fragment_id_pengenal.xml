<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor2">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="@dimen/margin_15">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Identitas Anda"
                android:textSize="@dimen/font_22"
                android:background="@color/colorPrimaryGray"
                android:padding="@dimen/padding_10"
                android:textColor="@color/textColorHome"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:background="@color/line"
                android:layout_marginTop="@dimen/margin_5"
                />

            <EditText
                android:id="@+id/edittxtNoIDPengenalPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded2"
                android:hint="No Kartu Identitas"
                android:textSize="@dimen/font_16"
                android:textColor="@color/textColorHome"
                android:textColorHint="@color/colorPrimaryGray"
                android:padding="10dp"
                android:layout_margin="@dimen/margin_15"
                android:gravity="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto Kartu Identitas Anda"
                android:textSize="@dimen/font_22"
                android:background="@color/colorPrimaryGray"
                android:padding="@dimen/padding_10"
                android:textColor="@color/textColorHome"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:background="@color/line"
                android:layout_marginTop="@dimen/margin_5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_200"
                        android:layout_margin="@dimen/margin_25"
                        android:src="@drawable/chelsea_islan"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <Button
                        android:id="@+id/btnSimpanIDPengenalPengaturan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_55"
                        android:text="Simpan"
                        android:background="@drawable/button_green"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/font_16"
                        android:textAllCaps="false"
                        android:paddingRight="5dp"
                        android:elevation="2dp"
                        android:stateListAnimator="@drawable/button_shadow"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
