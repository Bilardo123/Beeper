<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray"
            android:layout_marginBottom="@dimen/margin_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Up"
                android:textSize="@dimen/font_22"
                android:background="@color/colorPrimaryGray"
                android:padding="10dp"
                android:textColor="@color/textColorHome"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line"
                android:layout_marginTop="@dimen/margin_5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/topuppengaturan"
                android:textSize="@dimen/font_14"
                android:padding="@dimen/padding_5"
                android:textColor="@color/textColorHome"
                android:gravity="center"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray"
            android:padding="@dimen/padding_10">

            <ImageView
                android:id="@+id/imgBCATopUpPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bca"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray"
            android:padding="@dimen/padding_10">

            <ImageView
                android:id="@+id/imgMandiriTopUpPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_mandiri"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray"
            android:padding="@dimen/padding_10">

            <ImageView
                android:id="@+id/imgBRITopUpPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bri"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryWhiteGray"
            android:padding="@dimen/padding_10">

            <ImageView
                android:id="@+id/imgBNITopUpPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bni"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
