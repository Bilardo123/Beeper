<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgColor2">

        <LinearLayout
            android:id="@+id/layoutKartuKreditPaymentService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bgColor2"
            android:visibility="gone">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryWhiteGray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15">

                        <ImageView
                            android:layout_width="@dimen/width_50"
                            android:layout_height="@dimen/height_25"
                            android:src="@drawable/icon_visa"
                            android:layout_marginRight="@dimen/margin_5"/>

                        <ImageView
                            android:layout_width="@dimen/width_50"
                            android:layout_height="@dimen/height_25"
                            android:src="@drawable/icon_mastercard"
                            android:layout_marginLeft="@dimen/margin_5"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi Kartu Kredit"
                        android:textSize="@dimen/font_16"
                        android:padding="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textColor="@color/textColorHome"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_10">

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/rdoInformasiKartuKredit1PaymentService"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_200"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_15"
                            android:layout_marginBottom="@dimen/margin_20">

                            <ImageView
                                android:id="@+id/imgBiruBackgroundKartuKreditPaymentService"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_200"
                                android:src="@drawable/card"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:id="@+id/imgVisaBackgroundKartuKreditPaymentService"
                                android:layout_width="@dimen/width_80"
                                android:layout_height="@dimen/width_25"
                                android:src="@drawable/icon_visa_bg"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_20"/>

                            <ImageView
                                android:id="@+id/imgSidebeepKartuKreditPaymentService"
                                android:layout_width="@dimen/width_30"
                                android:layout_height="@dimen/height_50"
                                android:src="@drawable/logo_green"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/margin_20"
                                android:layout_marginBottom="@dimen/margin_10"/>

                            <TextView
                                android:id="@+id/txtNamaKartuKreditPaymentService"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sumano"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/colorPrimaryWhite"
                                android:layout_marginLeft="@dimen/margin_25"
                                android:layout_above="@+id/layoutKartuKreditPaymentService"/>

                            <LinearLayout
                                android:id="@+id/layoutKartuKreditPaymentService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:layout_marginBottom="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_70"
                                android:gravity="left|center">

                                <TextView
                                    android:id="@+id/txtNoKartuKreditPaymentService"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="31111xxxx0"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/font_16"
                                    android:padding="@dimen/padding_5"
                                    android:textColor="@color/colorPrimaryWhite"
                                    android:layout_marginRight="@dimen/margin_30"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/padding_5">

                                    <TextView
                                        android:id="@+id/txtKet1KartuKredit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Good"
                                        android:textSize="@dimen/font_8"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"/>

                                    <TextView
                                        android:id="@+id/txtKet2KartuKredit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thru"
                                        android:textSize="@dimen/font_8"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"
                                        android:layout_below="@+id/txtKet1KartuKredit"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/padding_5"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/txtKet3KartuKredit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Month/Year"
                                        android:textSize="@dimen/font_5"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"/>

                                    <TextView
                                        android:id="@+id/txtTanggalExpiredKartuKreditPaymentService"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="11 / 18"
                                        android:textSize="@dimen/font_12"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"
                                        android:layout_below="@+id/txtKet3KartuKredit"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_15"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryWhiteGray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_10">

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/rdoInformasiKartuKredit1PaymentService2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_200"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_15"
                            android:layout_marginBottom="@dimen/margin_20">

                            <ImageView
                                android:id="@+id/imgBiruBackgroundKartuKreditInformasiPengaturan2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_200"
                                android:src="@drawable/card"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:id="@+id/imgVisaBackgroundKartuKreditInformasiPengaturan2"
                                android:layout_width="@dimen/width_80"
                                android:layout_height="@dimen/width_25"
                                android:src="@drawable/icon_visa_bg"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_20"/>

                            <ImageView
                                android:id="@+id/imgSidebeepKartuKreditInformasiPengaturan2"
                                android:layout_width="@dimen/width_30"
                                android:layout_height="@dimen/height_50"
                                android:src="@drawable/logo_green"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/margin_20"
                                android:layout_marginBottom="@dimen/margin_10"/>

                            <TextView
                                android:id="@+id/txtNamaKartuKreditInformasiPengaturan2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sumano"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/colorPrimaryWhite"
                                android:layout_marginLeft="@dimen/margin_25"
                                android:layout_above="@+id/layoutKartuKreditInformasiPengaturan2"/>

                            <LinearLayout
                                android:id="@+id/layoutKartuKreditInformasiPengaturan2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:layout_marginBottom="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_70"
                                android:gravity="left|center">

                                <TextView
                                    android:id="@+id/txtNoKartuKreditInformasiPengaturan2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="31111xxxx0"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/font_16"
                                    android:padding="@dimen/padding_5"
                                    android:textColor="@color/colorPrimaryWhite"
                                    android:layout_marginRight="@dimen/margin_30"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/padding_5">

                                    <TextView
                                        android:id="@+id/txtKet1KartuKredit2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Good"
                                        android:textSize="@dimen/font_8"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"/>

                                    <TextView
                                        android:id="@+id/txtKet2KartuKredit2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thru"
                                        android:textSize="@dimen/font_8"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"
                                        android:layout_below="@+id/txtKet1KartuKredit2"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/padding_5"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/txtKet3KartuKredit2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Month/Year"
                                        android:textSize="@dimen/font_5"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"/>

                                    <TextView
                                        android:id="@+id/txtKet4KartuKredit2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="11 / 18"
                                        android:textSize="@dimen/font_12"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryWhite"
                                        android:layout_below="@+id/txtKet3KartuKredit2"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSidebeepKreditPaymentService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryWhiteGray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sidebeep Credit"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/textColor2"
                        android:gravity="center"
                        android:padding="@dimen/padding_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bgColor2"
                        android:layout_marginLeft="@dimen/margin_50"
                        android:layout_marginRight="@dimen/margin_50"
                        />

                    <TextView
                        android:id="@+id/txtSaldoSidebeepKreditPaymentService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 1.900.000"
                        android:textSize="@dimen/font_40"
                        android:textColor="@color/textColorHome"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="@dimen/padding_30"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/btnBayarPaymentService"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:text="Bayar"
            android:background="@drawable/button_green"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="@dimen/font_14"
            android:layout_marginTop="@dimen/margin_10"
            android:textAllCaps="true"
            android:paddingRight="5dp"
            android:elevation="2dp"
            android:stateListAnimator="@drawable/button_shadow"
            android:drawableRight="@drawable/icon_button_white"/>

    </LinearLayout>



</ScrollView>
