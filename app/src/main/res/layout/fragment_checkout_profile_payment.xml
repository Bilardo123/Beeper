<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor2">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/txtNamaServisCheckoutProfilePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ground Fight Training"
                android:textSize="@dimen/font_18"
                android:textColor="@color/textColorHome"
                android:padding="@dimen/padding_10"
                android:gravity="center"
                android:textAllCaps="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:background="@color/line"
                android:layout_marginTop="2dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_15"
                android:background="@drawable/layout_border2"
                android:gravity="center">

                <com.github.siyamed.shapeimageview.CircularImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgProfileCheckoutProfilePayment"
                    android:layout_width="@dimen/width_100"
                    android:layout_height="@dimen/height_100"
                    android:src="@drawable/chelsea_islan"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_centerHorizontal="true"
                    app:siBorderWidth="0dp"
                    app:siBorderColor="@color/textColorHome"
                    app:siSquare="true"/>

                <TextView
                    android:id="@+id/txtNamaSiderCheckoutProfilePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cynthia White"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtTanggalCheckoutProfilePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamis, 25/12/2016"
                    android:textColor="@color/colorPrimaryBlueLight"
                    android:gravity="center"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_15"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Utama"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/colorPrimaryShadow"
                        android:layout_marginBottom="2dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:text="Ground Fight Train"
                            android:textColor="@color/colorPrimaryBlueLight"
                            android:gravity="left"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_15"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Rp. 10.000.000"
                            android:textColor="@color/textColorHome"
                            android:gravity="left"
                            android:paddingLeft="@dimen/padding_10"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Tambahan"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/colorPrimaryShadow"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="2dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:text="Ground Fight Train"
                            android:textColor="@color/colorPrimaryBlueLight"
                            android:gravity="left"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_15"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Rp. 10.000.000"
                            android:textColor="@color/textColorHome"
                            android:gravity="left"
                            android:paddingLeft="@dimen/padding_10"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:text="Ground Fight Train"
                            android:textColor="@color/colorPrimaryBlueLight"
                            android:gravity="left"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_15"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Rp. 10.000.000"
                            android:textColor="@color/textColorHome"
                            android:gravity="left"
                            android:paddingLeft="@dimen/padding_10"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/line"
                        android:layout_marginTop="@dimen/margin_5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:text="Waktu"
                            android:textColor="@color/textColorHome"
                            android:gravity="left"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_15"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="08.00 - 11.00"
                            android:textColor="@color/colorPrimaryBlueLight"
                            android:textSize="@dimen/font_12"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:paddingLeft="@dimen/padding_10"
                            />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_5"
                    android:layout_marginTop="@dimen/margin_15"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    />

                <TextView
                    android:id="@+id/txtTotalCheckoutProfilePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 3.000.000"
                    android:textColor="@color/textColorHome"
                    android:gravity="center"
                    android:textSize="@dimen/font_24"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_10"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnBayarCheckoutProfilePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar"
        android:textAllCaps="true"
        android:background="@drawable/button_green"
        android:textColor="@color/colorPrimaryWhite"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/icon_button_white"
        android:elevation="2dp"
        android:stateListAnimator="@drawable/button_shadow"
        android:paddingRight="@dimen/padding_5"/>

</LinearLayout>